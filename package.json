{
	"name": "oscript-vscode-plugin",
	"displayName": "Oscript",
	"description": "Oscript support for writing Autonomous Agents in VS Code",
	"author": "Obyte",
	"license": "MIT",
	"version": "0.2.3",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/byteball/oscript-vscode-plugin"
	},
	"main": "./client/extension",
	"activationEvents": [
		"onLanguage:ojson"
	],
	"publisher": "obyte",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"oscript",
		"obyte",
		"byteball",
		"autonomous agents",
		"aa"
	],
	"contributes": {
		"commands": [
			{
				"command": "oscript-vscode-plugin.deployAa",
				"title": "Oscript: Deploy Autonomous Agent"
			},
			{
				"command": "oscript-vscode-plugin.checkDuplicateAa",
				"title": "Oscript: Check if Autonomous Agent is already deployed"
			}
		],
		"languages": [
			{
				"id": "ojson",
				"aliases": [
					"ojson",
					"ojson"
				],
				"extensions": [
					"aa",
					"oscript"
				],
				"configuration": "./client/syntaxes/ojson-language-configuration.json"
			},
			{
				"id": "oscript",
				"aliases": [
					"oscript",
					"oscript"
				],
				"configuration": "./client/syntaxes/oscript-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "ojson",
				"scopeName": "source.ojson",
				"path": "./client/syntaxes/ojson.tmLanguage.json"
			},
			{
				"language": "oscript",
				"scopeName": "source.oscript",
				"path": "./client/syntaxes/oscript.tmLanguage.json"
			}
		]
	},
	"engines": {
		"vscode": "^1.33.0"
	},
	"scripts": {
		"vscode:prepublish": "cd client && yarn && cd .. && yarn",
		"postinstall": "cd client && yarn && cd ../server && yarn && cd .."
	},
	"devDependencies": {
		"eslint": "^5.16.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.17.3",
		"eslint-plugin-node": "^9.1.0",
		"eslint-plugin-promise": "^4.1.1",
		"eslint-plugin-standard": "^4.0.0"
	},
	"dependencies": {
		"axios": "^0.19.2",
		"open": "^7.0.3"
	}
}
